<script src="../lib/nav-mobile.ts"></script>

<style is:global>

 /*laila-600 - latin */
@font-face {
  font-display: swap; 
  font-family: 'Laila';
  font-style: normal;
  font-weight: 600;
  src: url('../assets/fonts/laila-v15-latin-600.woff2') format('woff2'); 
}
/* laila-700 - latin */
@font-face {
  font-display: swap; 
  font-family: 'Laila';
  font-style: normal;
  font-weight: 700;
  src: url('../assets/fonts/laila-v15-latin-700.woff2') format('woff2'); 
}

/* quicksand-regular - latin */
@font-face {
  font-display: swap; 
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 400;
  src: url('../assets/fonts/quicksand-v31-latin-regular.woff2') format('woff2'); 
}
/* quicksand-500 - latin */
@font-face {
  font-display: swap; 
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 500;
  src: url('../assets/fonts/quicksand-v31-latin-500.woff2') format('woff2'); 
}
/* quicksand-600 - latin */
@font-face {
  font-display: swap; 
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 600;
  src: url('../assets/fonts/quicksand-v31-latin-600.woff2') format('woff2'); 
}
/* quicksand-700 - latin */
@font-face {
  font-display: swap; 
  font-family: 'Quicksand';
  font-style: normal;
  font-weight: 700;
  src: url('../assets/fonts/quicksand-v31-latin-700.woff2') format('woff2'); 
}

	:root {
		
		/* Colors */

		--text-color: #fcf4e2;
		--text-contrast-color: black;

		--background-color-100: #AA7878;
		--background-color-400: rgba(78, 9, 16, 0.847);
		--background-color-500: #42050A;
		--background-color-600: #140103;
		--background-color-900: #0c0001;
		--background-contrast-color: #720c14;

		--primary-color-500: #ffb703;
		--primary-color-900: #181100;

		--bbq-color: #210601;
		--lemon-pepper-color: #F5C507;
		--buffalo-color: #FF7105;
		--mango-habanero-color: #FFB700;
		--jalapeño-color: #556900;

		/* Brands colors */
		--uberEats-background-color: #142328;
		--uberEats-color: #06c167; 
		--whatsApp-background-color: #25d366;
		--whatsApp-color: black;

		/* Spacing*/
		--section-full-spacing: 120px;
		--section-half-spacing: 60px;

		--section-elements-spacing: 40px;
		--section-grid-spacing: 24px;


		--section-padding-large: 120px;
		--section-padding-medium: 80px;
		--section-padding-small: 40px;

		--section-margin-large: 120px;
		--section-margin-medium: 80px;
		--section-margin-small: 40px;

		--nav-height: 50px;
		--min-content-width: min(1300px, (100% - 1rem));

		--spacing-100: 4px;
		--spacing-200: 8px;
		--spacing-300: 12px;
		--spacing-400: 16px;
		--spacing-500: 20px;
		--spacing-600: 24px;
		--spacing-700: 32px;
		/* Font size */
		--font-size-headline: 4.5rem;

		--font-size-small: 1.125rem;
		--font-size-medium: 1.25rem;
		--font-size-large: 1.5rem;
		--font-size-x-large: 2rem;
		--font-size-x-x-large: 3rem;

		/* Font weights */
		--font-weight-thin: 400;
		--font-weight-small: 500;
		--font-weight-medium: 600;
		--font-weight-large: 700;
		
	}
	html {
		font-family: 'Quicksand', system-ui, sans-serif;
		background: var(--background-color-500);
		background-size: 224px;
		font-size: 16px;
		scroll-behavior: smooth;

		position: relative;
		overflow-x: hidden;
	}
	@media (max-width: 992px) {
		html {
			font-size: 14px;
			text-align: center;
			scroll-behavior: initial;
		}
		.menu-section {
			align-items: center;
		}
		
	}
	@media (min-width: 992px) {
		.hero-section {
			grid-auto-flow: column;
			grid-auto-columns: 1fr;
		}
		
	}
	body {
		background-color: var(--background-color-500);
		position: relative;
		
		overflow-x: hidden;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.main-header {
		position: fixed;
		width: 100%;
		top: 0;
		z-index: 4;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--background-color-500);
		color: var(--text-color);
		border-bottom: 1px solid var(--background-color-400);
	}
	.hightlight {
		color: var(--primary-color);
	}
	
	/* Nav */
	.primary-nav-container {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: var(--min-content-width); 
		font-size: var(--font-size-small);
		margin-block: var(--spacing-200);
		max-height: var(--nav-height);
		color: var(--text-color)
	}

	.nav-call-to-action {
		padding-block: var(--spacing-200);
		padding-inline: var(--spacing-500);

		background-color: var(--primary-color-500);
		color: var(--text-contrast-color);

		border-radius: 999px;
		border: 3px solid var(--primary-color-500);

		font-weight: var(--font-weight-large);

		transition: background-color, color 200ms ease;
	}

	.primary-nav ul{
		display: flex;
		align-items: center;
		margin: 0;
		z-index: 2;
		gap: 1.5rem;
	}
	.nav-custom-a {
		position: relative;
		font-weight: var(--font-weight-medium);
		padding-block: 10px;
	}
	.nav-custom-a::before {
		content: '';
		height: 3px;
		width: 0%;
		position: absolute;
		bottom: 4px;
		left: 0;
		background-color: var(--primary-color-500);
		transition: width 250ms ease;
	}
	.nav-custom-a:hover::before {
		width: 100%;
	}
	.primary-nav-toggle {
		display: none;
	}
	@media (max-width: 992px) {
		.primary-nav ul{
			z-index: 9999;
			flex-direction: column;
			position: fixed;
			inset: 0 0 0 15%;
			background-color: var(--background-color-600);
			color: var(--text-color);
			padding-top: min(30vh, 12rem);
			align-items: start;
			gap: 2rem;
			transform: translateX(100%);
			transition: transform 350ms ease;
		}
		.primary-nav ul li {
			margin-left: 12px;
		}
		.primary-nav ul[data-visible="true"] {
			transform: translateX(0%);
		}
		.primary-nav-toggle{
			display: block;
			z-index: 9999;
			background-image: url('../assets/MenuLogo.svg');
			width: 2rem;
			aspect-ratio: 1 / 1 ;
			border: none;
			background-color: var(--background-color-500);
			cursor: pointer;
		}
		.primary-nav-toggle[aria-expanded='true'] {
			background-image: url('../assets/MenuLogoClose.svg');
		}
		.nav-custom-a {
			margin-left: var(--spacing-400);
		}
	}
	.nav-logo {
		background-image: url('../assets/TestLogo.svg');
		background-repeat: no-repeat;
		background-position: center;
		/*  1.2 ratio*/
		height: 50px;
		width: 60px
	}



	/* Footer */
	.footer-content {
		padding-block: var(--section-half-spacing);

		color: var(--text-color);
		background-color: var(--background-color-900);

		display: grid;
		grid-template-columns: repeat(5, 1fr);
		
	}
	.footer-content h2{
		font-size: var(--font-size-medium);
		font-weight: var(--font-weight-medium);
		margin-bottom: .5rem;
	}
	.footer-content h3 {
		font-size: 1rem;
		font-weight: 400;
	}
	.footer-content p {
		margin-bottom: .5rem;
	}
	
	.footer-content > * {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: start;

		text-align: center;
		text-wrap: balance
	}
	.footer-content .nav-logo {
		justify-self: center;
		align-self: center;
	}
	.footer-content .footer-nav {
		text-align: start;
	}
	.footer-content .footer-socials ul {
		display: flex;
	}
	@media (max-width: 992px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: var(--section-grid-spacing);
		}
	
	}



	.bbq-color {
		background-color: transparent;
		fill: var(--bbq-color);
	}
	.buffalo-color {
		background-color: transparent;
		fill: var(--buffalo-color);
	}
	.mango-habanero-color {
		background-color: transparent;
		fill: var(--mango-habanero-color);
	}
	.lemon-pepper-color {
		background-color: transparent;
		fill: var(--lemon-pepper-color);
	}
	.jalapeño-color {
		background-color: transparent;
		fill: var(--jalapeño-color);
	}

	/* Image loading */
	.image-transition {
		opacity: 0;
		transition: opacity 250ms ease-in;
	}
	.loaded-img {
		opacity: 1;
	}
	

	

	/* Css reset */
	a {
		text-decoration: none;
		color: inherit;
	}
	body, h1, h2, h3, h4, h5, h6, p, ul {
		padding: 0;
		margin: 0;
	}
	ul {
		list-style: none;
	}
</style>
