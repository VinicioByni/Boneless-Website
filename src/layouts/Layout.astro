---
import wave from '../assets/Waves/svg-path.svg'
import CTA from '../components/call-to-action.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="main-header">
			<div class="primary-nav-container">
				<a class="nav-logo" href="#"></a>
				<nav class="primary-nav">
					<ul data-visible="false">
						<li>
							<a class="nav-custom-a" href="#aboutUs">Sobre nosotros</a>
						</li>
						<li>
							<a class="nav-custom-a" href="#menu">Menú</a>
						</li>
						<li>
							<a class="nav-custom-a" href="#location">Ubicación</a>
						</li>
						<li>
							<CTA></CTA>
						</li>
					</ul>
				</nav>
				<button aria-label="Navigation menu toggle" aria-expanded="false" class="primary-nav-toggle" type="button"></button>
			</div>
		</header>
		
		<slot />
	</body>
	<footer class="main-footer">
		<div class="footer-content">
			<a class="nav-logo" href="#"></a>
			<div class="footer-nav">
				<h2>Acerca de</h2>
				<ul>
					<li>
						<a href="#aboutUs-hours">Nosotros</a>
					</li>
					<li>
						<a href="#menu">Menú</a>
					</li>
					<li>
						<a href="#orders">Pedidos</a>
					</li>
				</ul>
			</div>
			
			<div>
				<h2>Horario</h2>
				<h3>Lunes a Sabado</h3>
				<p>13:00 pm - 21:00pm</p>
				<h3>Domingo</h3>
				<p>13:00pm - 20:00pm</p>
			</div>
			<div>
				<h2>Ubicación</h2>
				<p>Boneless Crave, Calle Ignacio Allende, Zona Centro, Chihuahua, Chih.</p>
			</div>
			<div class="footer-socials">
				<h2>¡Siguenos!</h2>
