---
interface Props{
    name: string
    isHot: boolean
    color: string
}

const { name, isHot, color} = Astro.props
---
<div class="sauce-item">
    <h4>{name}</h4>
    {
        isHot ? (
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-flame" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 12c2 -2.96 0 -7 -1 -8c0 3.038 -1.773 4.741 -3 6c-1.226 1.26 -2 3.24 -2 5a6 6 0 1 0 12 0c0 -1.532 -1.056 -3.94 -2 -5c-1.786 3 -2.791 3 -4 2z" />
        </svg>
        ) : (
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-flame-off" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M8.973 8.974c-.335 .378 -.67 .716 -.973 1.026c-1.226 1.26 -2 3.24 -2 5a6 6 0 0 0 11.472 2.466m.383 -3.597c-.32 -1.409 -1.122 -3.045 -1.855 -3.869c-.281 .472 -.543 .87 -.79 1.202m-2.358 -2.35c-.068 -2.157 -1.182 -4.184 -1.852 -4.852c0 .968 -.18 1.801 -.465 2.527" />
        <path d="M3 3l18 18" />
        </svg>
        )
    }
    
</div>

<style define:vars={{color}}>
    .sauce-item {
        padding: 12px;
        background-color: var(--color);
        min-width: 300px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border: 2px solid var(--text-color);
        border-radius: 500px;
    }
    .sauce-item h4 {
        margin-right: 6px;
        padding-inline: 12px; 
        background-color: var(--text-contrast-color);
        border-radius: 500px;
        
    }
</style>