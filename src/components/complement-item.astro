---
import bonelessImg from  '../resources/default_boneless.jpg';
import { Image } from 'astro:assets';

export type ItemQtyPrices= {
    itemPrice: string
    itemQuantity: string
}

interface Props {
    itemTitle: string
    itemDescription: string
    itemQtyPrice: ItemQtyPrices[]
    itemImage: ImageMetadata
    itemImageAlt: string
}

const { itemTitle, itemDescription, itemQtyPrice, itemImage, itemImageAlt } = Astro.props;
---

<div class="complement-item-container">
    <div class="item-info">
        
            <h4>{itemTitle}</h4>
            <p>{itemDescription}</p>
        
        <div class="item-quantity-price">
            {itemQtyPrice.map(item => (
                <p>{item.itemQuantity} - <span class="price-symbol">$</span>{item.itemPrice}</p>
            ))}
        </div>
    </div>
    <div class="item-img">
        <Image src={itemImage} alt={itemImageAlt}></Image>
    </div>
</div>

<style>
    .complement-item-container {
        --border-radius: 28px;

        display: flex;
        gap: 8px;

        max-width: 550px;
    }
    .item-info {
        background-color: var(--primary-color);
		color: var(--secondary-color);

		border: 2px solid var(--text-color);
		border-top-left-radius: var(--border-radius);
		border-bottom-left-radius: var(--border-radius);
		padding: 12px;

        width: calc(60% - 4px);

		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: start;
		text-align: start;
    }
    .item-info h4{
        font-size: var(--font-size-large);
        font-weight: var(--font-weight-large);
    }
    .item-info p {
        font-size: var(--font-size-medium);
    }
    .item-quantity-price {
        font-size: var(--font-size-medium);
        font-weight: var(--font-weight-medium);
    }
    .price-symbol {
        font-size: var(--font-size-small);
        font-weight: var(--font-weight-small);
    }
    .item-img {
        border: 2px solid var(--text-color);
		border-top-right-radius: var(--border-radius);
		border-bottom-right-radius: var(--border-radius);

		overflow: hidden;
		width: 40%;
    }
    .item-img img {
        width: 100%;
		height: 100%;
        aspect-ratio: 1/1;
		object-fit: cover;
		object-position: center;
    }
    @media(max-width: 992px) {
        .complement-item-container {
            flex-direction: column;
        }
        .item-img {
            border-top-right-radius: 0;
            border-bottom-left-radius: var(--border-radius);
            width: auto;
        }
        .item-info {
            border-bottom-left-radius: 0;
            border-top-right-radius: var(--border-radius);
            width: auto;
        }
    }

</style>