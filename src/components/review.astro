---
import { Image } from 'astro:assets';

interface Props {
    userImg: ImageMetadata
    userName: string
    userReviewRating: number
    userReviewOpinion: string
    reviewSiteLink: string
    reviewSiteName: string
}

const {userImg, userName, userReviewRating, userReviewOpinion, reviewSiteLink, reviewSiteName} = Astro.props

---

<article class="review">
    <div>
        <header class="review-header">
            <Image src={userImg} alt="Foto de perfil de reseñador"></Image>
            <div>
                <h3>{userName}</h3>
                <div class="rating">
                    <p>{userReviewRating}.0</p>
                    <svg class="star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" stroke-linecap="round" stroke-linejoin="round">
