---
import { Image } from 'astro:assets';

export type ItemQtyPrices= {
    itemPrice: string
    itemQuantity: string
}

interface Props {
    itemTitle: string
    itemDescription: string
    itemQtyPrice: ItemQtyPrices[]
    itemImage: ImageMetadata
    itemImageAlt: string
    isImageLeft: string
}

const { itemTitle, itemDescription, itemQtyPrice, itemImage, itemImageAlt, isImageLeft } = Astro.props;
---

<div class="item" data-imageLeft={isImageLeft}>
    <Image src={itemImage} alt={itemImageAlt}></Image>
    <section class="item-info">
        <h3>{itemTitle}</h3>
        <p>{itemDescription}</p>
        {
            itemQtyPrice.map((item) => 
                <p class="price">{item.itemQuantity} - {item.itemPrice}</p>
            )
        }
    </section>
</div>

<style>
    .item {
		display: flex;
        justify-content: center;
		align-items: center;
		gap: var(--spacing-600);

		padding-inline: var(--spacing-700);
        margin-bottom: var(--section-margin-small);

		color: var(--text-color);
	}
    .item[data-imageLeft = 'false'] {
        flex-direction: row-reverse;
    }
    .item img {
		width: 30%;
		height: auto;
		aspect-ratio: 1/1;
		object-fit: cover;
		object-position: center;

		border-radius: 36px;
		box-shadow: 2px 2px 1px black;
	}

    .item .item-info {
        width: 45%;  
	}
    .item[data-imageLeft = 'true'] .item-info {
        text-align: end;
    }
    .item[data-imageLeft = 'false'] .item-info {
        text-align: start;
    }
	.item .item-info h3 {
		border-bottom: 1px solid var(--primary-color-500);

		font-size: var(--font-size-subheadline);
	}
	.item .item-info .price{
		font-weight: var(--font-weight-medium);
		font-size: var(--font-size-large);
	}
    @media (max-width: 992px) {
        .item {
            flex-direction: column;
            gap: var(--spacing-100);
        }
        .item[data-imageLeft = 'false'] {
        flex-direction: column;
        }
        .item[data-imageLeft = 'true'] .item-info, .item[data-imageLeft = 'false'] .item-info{
        text-align: center;
        }
        .item img {
            width: 90%;
        } 
        .item .item-info {
            width: 80%;
        }

    }

</style>