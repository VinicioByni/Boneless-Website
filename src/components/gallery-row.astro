---
import { Image } from 'astro:assets';

interface Props {
    processStepOneImg: ImageMetadata
    processStepOneAlt: string
    processStepTwoImg: ImageMetadata
    processStepTwoAlt: string
    finalProductImg: ImageMetadata
    finalProductAlt: string

}  

const { processStepOneImg, processStepOneAlt, processStepTwoImg,processStepTwoAlt, finalProductImg, finalProductAlt } = Astro.props
---


<div class="gallery">
    <div class="image-container">
        <Image class="process-img" src={processStepOneImg} alt={processStepOneAlt}></Image>
    </div>
    <div class="image-container">
        <Image class="process-img second-level"src={processStepTwoImg} alt={processStepTwoAlt}></Image>
    </div>
    <div class="image-container">
        <Image class="final-product-img third-level" src={finalProductImg} alt={finalProductAlt}></Image>
    </div> 
</div>


    


<style>
    .gallery {
        --border-width: 3px;

        display: flex;
        justify-content: center;
        gap: var(--spacing-500);
    }
    .gallery .image-container {
        width: calc(33% - (var(--spacing-500))/2);
        aspect-ratio: 3/2;
        height: auto;
    }
    .gallery .image-container img {
        width: 100%;
        aspect-ratio: 3/2;
        height: auto;
        object-fit: cover;
        object-position: center;
    }
    .process-img {
        border: var(--border-width) solid white;
    }
    .final-product-img {
        border: var(--border-width) solid var(--primary-color-500);
    }
    .second-level {
        margin-top: calc(33% * (2/3));
    }
    .third-level {
        margin-top: calc(33% * (4/3));
    }

    @media(max-width: 992px) {
        .gallery {
            flex-direction: column;
            align-items: center;
        }
        .gallery .image-container {
            width: 95%;
        }
        .second-level, .third-level {
            margin-top: 0;
        }
    }

</style>