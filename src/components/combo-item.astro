---
interface Props {
    comboName: string
    comboItems: string
    comboPrice: number
    comboDescription: string
    comboImg: ImageMetadata
}

const { comboName, comboItems, comboPrice, comboDescription, comboImg } = Astro.props;

---

<div class="combo-item">
    <img src={comboImg.src}></img>
    <div class="combo-name-container">
        <h4>{comboName}</h4>
    </div>
    <div class="combo-info-container">
        <h5>{comboItems}</h5>
        <div class="combo-price-description-container">
            <p class="combo-price"><span class="menu-price-symbol">$</span>{comboPrice}</p>
            <p class="combo-description">{comboDescription}</p>
        </div>
    </div>
    
</div>


<style>
    .combo-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 350px;
        position: relative;    
    }
    .combo-name-container {
        background-color: var(--primary-color);
        color: var(--text-contrast-color);
        padding-bottom: 140px;
        padding-inline: 12px;
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
        width: fit-content;
        max-width: 150px; 

    }
    .combo-item img {
        position: absolute;
        width: 50%;
        border-top-right-radius: 999px;
        border-top-left-radius: 999px;
        border: 2px solid var(--text-color);
        left: 25%;
        top: 2.25rem;
    }
    .combo-info-container {
        background-color: var(--primary-color);
        color: var(--text-contrast-color);        
        border: 2px solid var(--text-color);
        padding-inline: 12px;
        padding-block: 12px;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        height: 100%;
        position: relative;
    }
    .combo-info-container h5 {
        font-size: 1.75rem;
        text-align: center;
    }
    .combo-price-description-container {
        display: flex;
        align-items: center;
    }
    .combo-price {
        font-size: 2rem;
        padding-inline: 10px;
        margin-right: 8px;
        background-color: var(--secondary-component-background-color);
        color: var(--text-antagonist-color);
        border-radius: 999px;
    }
    .combo-description {
        font-size: 1rem;
    }
    .menu-price-symbol {
        font-size: 1.25rem;
    }

</style>